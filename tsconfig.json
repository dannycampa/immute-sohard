{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noEmitOnError": true,
        "alwaysStrict": true,
        "importHelpers": true,
        "typeRoots": ["node_modules/@types", "./types"],
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true
    },
    "files": [
        "./index.ts",
        "./test.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
